.icons
   a(href='/' style='float: left;')
      i.fa(class='fa-chevron-left fa-2x')
   a(href='/' style='float: right;')
      i.fa(class='fa-home fa-2x')
.modalTitle
   h1 Taste
.modalContent
   .media
      .video
         video(autoplay muted controls id="tastevideoModal")
            source(src="../public/images/taste_android.webmhd.webm")
            source(src="../public/images/taste_android.mp4")
      .tabbed
         p#android(style='font-weight: bold; background-color: #e6e6e6;' onclick="playOther('#android','#iOS','../public/images/taste_android.webmhd.webm','../public/images/taste_android.mp4')") Android
         p#iOS(onclick="playOther('#iOS','#android','../public/images/taste_iOS.webmhd.webm','../public/images/taste_iOS.mp4')") iOS
   .text
      | <strong> Taste lets you take and share pictures at local businesses in exchange for gifts for you and your friends! </strong>
      ul
         li Built for both iOS and Android
         li Quickly log-in with Facebook
         li Redeem gifts straight from the Web App
      | <strong> Tech Used: </strong>
      ul
         li Seamless FB Login & Graph API integration
         li Custom REST API via NodeJS & PostgreSQL
         li Responsive website via Bootstrap + AngularJS
         li Google Analytics & Google Maps API
script.
   var vid = document.getElementById('tastevideoModal');
   vid.addEventListener('loadeddata', function () {
      vid.currentTime = getParameterByName('t');
      vid.play();
   }, false);
