        var openModal = function (modalString, mainVideoID, modalVideoID) {
            console.log("Open pressed");
            var modal = $(modalString).clone();
            //modal.attr('id', modalString + 'Clone');
            vex.open({content: modal});
            var mainVid = document.getElementById(mainVideoID);
            var modalVid = modal.find('#' + modalVideoID)[0];
            modalVid.currentTime = mainVid.currentTime;
            modalVid.play();
            mainVid.pause();
        }
