.icons
    a(href='/' style='float: left;')
        i.fa(class='fa-chevron-left fa-2x')
    a(href='/' style='float: right;')
        i.fa(class='fa-home fa-2x')
.modalTitle
    h1 Matchflare
    h3 go play with matches
.modalContent
    .media
        .video
            video(muted controls id="matchflarevideoModal")
                source(src="../public/images/matchflare_android.webmhd.webm")
                source(src="../public/images/matchflare_android.mp4")
        .tabbed
            p#android(style='font-weight: bold; background-color: #e6e6e6;' onclick="play('#android','#iOS','../public/images/matchflare_android.webmhd.webm','../public/images/matchflare_android.mp4')") Android
            p#iOS(onclick="play('#iOS','#android','../public/images/matchflare_iOS.webmhd.webm','../public/images/matchflare_iOS.mp4')") iOS
    .text
        | <strong> Matchflare lets you play matchmaker with your friends! </strong>
        ul
            li Built for both iOS and Android
            li Match anonymously
            li Register over SMS in seconds
        | <strong> Tech Used: </strong>
        ul
            li Cross-platform real-time chat server via Websockets
            li Push notifications via GCM and APNS
            li Persistent image storage via Amazon S3
            li Custom REST API via NodeJS & PostgreSQL
            li Responsive website via Bootstrap + AngularJS
            li Nexmo SMS API + Google Analytics
script.
    var vid = document.getElementById('matchflarevideoModal');
    vid.addEventListener('loadeddata', function () {
        vid.currentTime = getParameterByName('t');
        vid.play();
    }, false);

    var play = function(thisElement, other, src1, src2) {
        $(thisElement)[0].style.fontWeight = 'bold';
        $(thisElement)[0].style.backgroundColor = '#e6e6e6';
        $(other)[0].style.fontWeight = '200';
        $(other)[0].style.backgroundColor = 'white';
        var sources = vid.getElementsByTagName('source');
        sources[0].src = src1;
        sources[1].src = src2;
        vid.load();
        vid.play();
        console.log('play');
    }